---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" textAling="center" href="about">
  <div
    class={`flex flex-col items-center gap-12 md:flex-row md:gap-8 ${
      image ? "" : "md:justify-center"
    }`}
  >
    <p
      class={`text-base text-base-content leading-relaxed md:pr-5 ${
        image ? "md:w-1/2" : "max-w-2xl text-center"
      }`}
    >
      {description}
    </p>

    {
      image && (
        <div class="h-80 w-64 flex-shrink-0 rotate-[5deg] bg-base-100 p-4 shadow-xl md:rotate-[7deg]">
          <Image
            class="h-full w-full rounded-xl object-cover"
            src={image}
            width="260"
            height="260"
            alt={`Photo of ${name}`}
          />
        </div>
      )
    }
  </div>
</Section>
