---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;
---

<section id="hero" class="bg-base-100 pt-20">
  <h1
    class="mb-4 font-serif text-6xl font-bold tracking-tight text-base-content sm:text-7xl md:text-8xl"
  >
    {name}
  </h1>

  <p
    class="mb-6 font-serif text-3xl font-semibold leading-snug tracking-tight text-primary sm:text-4xl md:text-5xl"
  >
    {specialty}
  </p>

  <p
    class="mb-12 max-w-2xl text-base font-normal leading-relaxed text-base-content/70 md:text-lg"
  >
    {summary}
  </p>

  <a
    href={`mailto:${email}`}
    class="inline-block rounded-full bg-primary px-7 py-3.5 text-sm font-semibold text-primary-content shadow-md transition-all hover:brightness-110 hover:shadow-lg active:scale-[0.98]"
  >
    Get in Touch
  </a>
</section>
